<% content_for :title, 'Triggers by word' %>
<section class="box-header">
  <h1>Search treatments for word</h1>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= reports_path %>"><i class="fa fa-bar-chart"></i> Reports</a>
    </li>
    <li>
      <a href="#">Treatment notes</a>
    </li>
    <li class="active">Triggers by word</li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <table class="table-flat">
      <thead>
        <th>Word</th>
        <th># mentions</th>
        <th># clients</th>
      </thead>
      <tbody>
        <% @trigger_words.each do |tw| %>
          <tr>
            <td><%= tw.text %></td>
            <td><%= tw.trigger_report.try(:mentions_count) || '...' %></td>
            <td><%= tw.trigger_report.try(:patients_count) || '...' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="col-md-6 text-left">
        <%= page_entries_info @trigger_words, entry_name: 'word' %>
      </div>
      <div class="col-md-6 text-right">
        <%= paginate @trigger_words %>
      </div>
    </div>
  </div>
</section>
