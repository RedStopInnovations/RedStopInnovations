<% content_for :title, 'Letter templates' %>

<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1>Letter templates</h1>
    </div>
    <div class="text-right col-xs-6">
      <a class="btn btn-primary" href="<%= new_letter_template_path %>">+ Add letter template</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li class="active">Letter templates</li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email subject</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @letter_templates.each do |letter_template| %>
          <tr>
            <td>
              <a href="<%= edit_letter_template_path(letter_template) %>"><%= letter_template.name %></a>
            </td>
            <td><%= letter_template.email_subject %></td>
            <td class="text-center">
              <a href="<%= letter_template_path(letter_template) %>" class="btn btn-link" title="show">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </a>
              <a href="<%= edit_letter_template_path(letter_template) %>" class="btn btn-link" title="edit">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
              </a>
              <a href="<%= letter_template_path(letter_template) %>" title="delete" rel="nofollow" data-confirm="Are you sure?" data-method="delete" class="btn btn-link">
                <i class="fa fa-trash" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
