<div class="modal fade" id="js-modal-update-task-completion">
  <div class="modal-dialog modal-md">
    <div class="modal-content">

      <div class="modal-header bg-gray-light">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Task complete</h4>
      </div>

      <div class="modal-body">
        <%= form_tag complete_task_path(@task), method: 'PUT' do %>
        <div class="form-group">
          <label>Date completed:</label>
          <input type="date" class="form-control bg-white js-input-date-completed"
            name="completion[date]"
            value="<%= task_user.complete_at? ? task_user.complete_at.strftime('%Y-%m-%d') : Date.current.strftime('%Y-%m-%d') %>"
            required
            data-alt-format="d M Y"
            data-date-format="Y-m-d">
        </div>

        <div class="form-group">
          <label>Duration (minutes):</label>
          <input type="number" min="1" max="480" class="form-control" name="completion[duration]"
            value="<%= task_user.completion_duration.presence %>">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
        <% end %>
      </div>
    </div>
  </div>
</div>