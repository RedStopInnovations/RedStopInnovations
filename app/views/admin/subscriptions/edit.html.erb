<section class="box-header">
  <h1><%= @subscription.business.name %>'s subscription edit</h1>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= admin_settings_path %>"><i class="fa fa-cog"></i> Admin Settings</a>
    </li>
    <li>
      <a href="<%= admin_subscriptions_path %>">Subscriptions</a>
    </li>
    <li><%= @subscription.business.name %> - Edit</li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <div class="row">
      <div class="col-md-6 col-xs-12">
        <%= simple_form_for @subscription, url: admin_subscription_path(@subscription), method: 'PUT' do |f| %>
          <%= f.input :subscription_plan_id, as: :select, collection: subscription_plans_options_for_select(SubscriptionPlan.all) %>

          <button class="btn sitebtn" type="submit">Update</button>
          <a href="<%= admin_subscription_path(@subscription) %>" class="btn linebtn">Cancel</a>
        <% end %>
      </div>
    </div>

  </div>
</section>
