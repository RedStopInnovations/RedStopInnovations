<section class="box-header">
  <h1>
    Invoice #<%= @invoice.invoice_number %>
  </h1>
</section>

<section class="content">
  <h3>General info</h3>
  <div class="box">
    <div class="block-info">
      <strong>Patient:</strong>
      <p><%= @invoice.patient.try :full_name %></p>
    </div>

    <div class="block-info">
      <strong>Issue date:</strong>
      <p><%= @invoice.issue_date %></p>
    </div>

    <div class="block-info">
      <strong>Status:</strong>
      <p><%= @invoice.status %></p>
    </div>

    <div class="block-info">
      <strong>Date closed:</strong>
      <p><%= @invoice.date_closed %></p>
    </div>

    <div class="block-info">
      <strong>Notes:</strong>
      <p><%= @invoice.notes %></p>
    </div>
  </div>

  <h3>Invoice Info</h3>
  <div class="box">
    <div class="block-info">
      <strong>Subtotal:</strong>
      <p><%= format_money @invoice.subtotal %></p>
    </div>
    <div class="block-info">
      <strong>Amount:</strong>
      <p><%= format_money @invoice.amount %></p>
    </div>
  </div>
</section>
