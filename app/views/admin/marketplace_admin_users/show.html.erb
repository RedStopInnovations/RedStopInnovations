<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @admin_user.full_name %></h1>
    </div>
    <div class="col-xs-6 text-right">
      <a href="<%= edit_admin_marketplace_admin_user_path(@marketplace, @admin_user) %>" class="btn sitebtn">Edit details</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= admin_marketplaces_path %>">Marketplaces</a>
    </li>
    <li>
      <a href="<%= admin_marketplace_path(@marketplace) %>"><%= @marketplace.name %></a>
    </li>
    <li><a href="<%= admin_marketplace_admin_users_path(@marketplace) %>">Admin users</a></li>
    <li class="active"><%= @admin_user.full_name %></li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <div class="row">
      <div class="col-sm-6 col-xs-12">

        <div class="block-info">
          <strong>Name</strong>
          <p><%= @admin_user.full_name %></p>
        </div>

        <div class="block-info">
          <strong>Email</strong>
          <p><%= @admin_user.email %></p>
        </div>
      </div>
    </div>
  </div>
</section>
