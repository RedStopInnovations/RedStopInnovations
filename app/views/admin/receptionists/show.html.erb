<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @receptionist.full_name %></h1>
    </div>
    <div class="col-xs-6 text-right">
      <a href="<%= edit_admin_receptionist_path(@receptionist) %>" class="btn sitebtn">
        <i class="fa fa-pencil"></i> Edit details
      </a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= admin_settings_path %>"><i class="fa fa-cog"></i> Admin Settings</a>
    </li>
    <li>
      <a href="<%= admin_receptionists_path %>">Receptionists</a>
    </li>
    <li><%= @receptionist.full_name %></li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <div class="block-info">
      <strong>First name:</strong>
      <p><%= @receptionist.first_name %></p>
    </div>

    <div class="block-info">
      <strong>Last name:</strong>
      <p><%= @receptionist.last_name %></p>
    </div>

    <div class="block-info">
      <strong>Email:</strong>
      <p><%= @receptionist.email %></p>
    </div>

    <div class="block-info">
      <strong>Active:</strong>
      <div class="check-box inline">
        <input type="checkbox" <%= "checked" if @receptionist.active  %>>
        <label>&nbsp;</label>
      </div>
    </div>
  </div>
</section>
