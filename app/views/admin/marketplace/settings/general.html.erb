<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1>General settings</h1>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= admin_settings_path %>">Settings</a>
    </li>
    <li class="active">General</li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <div class="col-sm-6 col-xs-12">
      <div class="block-info">
        <strong>Name</strong>
        <p><%= @marketplace.name %></p>
      </div>
      <div class="block-info">
        <strong>API key</strong>
        <p>
          <% if @marketplace.api_key? %>
            <div class="input-group">
              <input type="text"
                readonly
                class="form-control"
                value="<%= @marketplace.api_key %>"
                style="background-color: #fff;"/>
              <span class="input-group-btn">
                <button
                  class="btn btn-default btn-form"
                  data-form-url="<%= admin_marketplace_settings_generate_api_key_path %>"
                  data-form-method="POST"
                  data-form-confirmation="Warning! The current API key will be no longer valid. Are you sure want to regenerate?"
                  type="button">Regenerate!</button>
              </span>
            </div>

          <% else %>
            <span class="text-muted">N/A</span>
            <button
              class="btn btn-sm btn-default btn-form"
              type="button"
              data-form-url="<%= admin_marketplace_settings_generate_api_key_path %>"
              data-form-method="POST"
              >Generate</button>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</section>
