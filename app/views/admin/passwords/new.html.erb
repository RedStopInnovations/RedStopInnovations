<% content_for :body_class, 'login-page' %>

<div class="login-box">
  <div class="login-logo">
    <h2 class="mt-0">Tracksy</h2>
  </div>

  <div class="login-box-body">
    <h1 class="login-box-heading">Forgot Password</h1>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: :vertical_form) do |f| %>
      <%= f.input :email, placeholder: "Enter your email here" %>

      <div class="row">
        <div class="col-md-12">
          <button type="submit" class="btn btn-primary btn-block btn-flat mar-top-15">Send reset password mail</button>
        </div>
      </div>
    <% end %>

    <hr>
    <a href="<%= new_admin_user_session_path %>">Login</a>
  </div>
</div>
