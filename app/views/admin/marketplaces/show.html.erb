<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @marketplace.name %></h1>
    </div>
    <div class="col-xs-6 text-right">
      <div class="btn-group">
        <a href="<%= edit_admin_marketplace_path(@marketplace) %>" class="btn btn-primary">Edit details</a>
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
          <li>
            <a href="<%= admin_marketplace_admin_users_path(@marketplace) %>">Manage admin users</a>
          </li>
        </ul>
      </div>

    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= admin_marketplaces_path %>">Marketplaces</a>
    </li>
    <li class="active"><%= @marketplace.name %></li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <div class="row">
      <div class="col-sm-6 col-xs-12">

        <div class="block-info">
          <strong>Name</strong>
          <p><%= @marketplace.name %></p>
        </div>

        <div class="block-info">
          <strong>Businesses</strong>
          <ul class="list-unstyled">
            <% @marketplace.businesses.each do |business| %>
              <li>
                <a href="<%= admin_business_path(business) %>"><%= business.name %></a>
              </li>
            <% end %>
          </ul>
        </div>

      </div>
    </div>
  </div>
</section>
