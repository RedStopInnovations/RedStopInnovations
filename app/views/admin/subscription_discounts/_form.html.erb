<%= simple_form_for subscription_discount, url: subscription_discount.new_record? ? admin_subscription_discounts_path : admin_subscription_discount_path(subscription_discount) do |f| %>

  <h3>Subscription Discount info</h3>
  <div class="box">
    <%= f.input :name %>
    <%= f.input :discount_type, as: :select, collection: SubscriptionDiscount::DISCOUNT_TYPES %>
    <%= f.input :business_id, as: :select, collection: Business.all %>
    <%= f.input :amount %>
    <%= f.input :from_date, as: :string, input_html: { class: 'datepicker'} %>
    <%= f.input :end_date, as: :string, input_html: { class: 'datepicker'} %>
  </div>
  <div class="text-center">
    <div class="switch-button">
      <a href="<%= admin_subscription_discounts_path %>">Back</a>
      <button><%= subscription_discount.new_record? ? "Create" : "Update" %></button>
    </div>
  </div>
<% end %>