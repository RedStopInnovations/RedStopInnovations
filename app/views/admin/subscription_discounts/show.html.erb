<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @subscription_discount.name %></h1>
    </div>
    <div class="col-xs-6 text-right">
      <div class="btn-group">
        <button type="button" class="btn btn-success btn-sm btn-flat dropdown-toggle" data-toggle="dropdown">
          Action <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
          <li>
            <a href="<%= edit_admin_subscription_discount_path(@subscription_discount) %>">
              <i class="fa fa-pencil-square-o"></i> Edit
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>


<section class="content">
  <h3>General Info</h3>
  <div class="box">
    <div class="block-info">
      <strong>Name:</strong>
      <p><%= @subscription_discount.name %></p>
    </div>
    
    <div class="block-info">
      <strong>Discount Type:</strong>
      <p><%= @subscription_discount.discount_type %></p>
    </div>
    
    <div class="block-info">
      <strong>Business:</strong>
      <p><%= @subscription_discount.business.name %></p>
    </div>
    
    <div class="block-info">
      <strong>Amount:</strong>
      <p><%= @subscription_discount.amount %></p>
    </div>
    
    <div class="block-info">
      <strong>From Date:</strong>
      <p><%= @subscription_discount.from_date.strftime('%b %d, %Y') %></p>
    </div>
    
    <div class="block-info">
      <strong>End Date:</strong>
      <p><%= @subscription_discount.end_date.strftime('%b %d, %Y') %></p>
    </div>

    <div class="block-info">
      <strong>Expired:</strong>
      <p><%= @subscription_discount.expired %></p>
    </div>
  </div>

</section>