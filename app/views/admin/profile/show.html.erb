<section class="box-header">
  <h1>My profile</h1>
</section>

<section class="content">
  <%= simple_nested_form_for @admin_user, url: admin_profile_path, method: 'PUT', wrapper: :vertical_form do |f| %>
    <div class="box">
      <div class="box-body">
        <div class="row">

          <div class="col-md-6">
            <h3>Personal details</h3>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :email, readonly: true, disabled: true %>
          </div>

          <div class="col-md-6">
            <h3>Change password</h3>
            <p class="help-block">Leave blank if you don't want to change it</p>
            <%= f.input :current_password %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
          </div>

        </div>
        <hr>
        <button class="btn sitebtn" type="submit">Update profile</button>
      </div>
    </div>
  <% end %>

</section>
