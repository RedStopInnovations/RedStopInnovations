<% content_for :body_class, 'login-page' %>
<div class="login-box">
  <div class="login-logo">
  </div>

  <div class="login-box-body">
    <p class="login-box-msg">Please set your password before continue</p>

    <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }, wrapper: :vertical_form do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :invitation_token %>

      <%= f.input :password, required: true, hint: 'Minimum is 8 characters' %>
      <%= f.input :password_confirmation, required: true %>

      <%= f.submit t("devise.invitations.edit.submit_button"),
        class: "btn btn-primary btn-block btn-flat" %>
    <% end %>
  </div>
</div>
