<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @tag.name %></h1>
    </div>
    <div class="col-xs-6 text-right">
      <a href="<%= edit_admin_tag_path(@tag) %>" class="btn sitebtn">
        <i class="fa fa-pencil"></i> Edit details
      </a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= admin_settings_path %>"><i class="fa fa-cog"></i> Admin Settings</a>
    </li>
    <li>
      <a href="<%= admin_tags_path %>">Tags</a>
    </li>
    <li><%= @tag.name %></li>
  </ul>
</section>

<section class="content">
  <h3>General info</h3>
  <div class="box">
    <div class="block-info">
      <strong>Name: </strong>
      <p><%= @tag.name %></p>
    </div>
    <div class="block-info">
      <strong>Classification: </strong>
      <p><%= @tag.classification %></p>
    </div>
  </div>
</section>
