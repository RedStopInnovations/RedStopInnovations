<script type="text/javascript">
  window.config = {
    baseUrl: '<%= root_url %>'
  };

  window.session = {
    <% if user_signed_in? %>
    user: {
      id: <%= current_user.id %>,
      is_practitioner: <%= current_user.is_practitioner? %>,
      <% if current_user.is_practitioner? %>
      practitioner_id: <%= current_user.practitioner.try(:id) %>,
      <% end %>
      role: '<%= current_user.role %>',
      timezone: '<%= current_user.timezone %>',
      avatar_url: '<%= current_user.avatar.url(:thumb) %>',
      business_id: <%= current_user.business_id %>
    }
    <% end %>
  };
</script>
