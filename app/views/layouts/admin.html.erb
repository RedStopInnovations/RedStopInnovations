<!DOCTYPE html>
<html>
  <head>
    <title>Tracksy Administration <%= " | #{ yield(:title) }" if content_for?(:title) %></title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="robots" content="noindex, nofollow">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application-vendors', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'print', media: 'print' %>
    <%= javascript_include_tag 'application-vendors' %>
    <%= javascript_include_tag 'application' %>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <%= yield(:head_js) %>

  </head>

  <body class="fixed skin-purple-light sidebar-mini <%= yield(:body_class) %>">
    <div class="wrapper">
      <% if admin_user_signed_in? %>
        <% case current_admin_user.role %>
        <% when AdminUser::SUPER_ADMIN_ROLE %>
          <%= render 'layouts/admin/header' %>
        <% when AdminUser::MARKETPLACE_ADMIN_ROLE %>
          <%= render 'layouts/admin/marketplace_admin_header' %>
        <% end %>


        <% case current_admin_user.role %>
        <% when AdminUser::SUPER_ADMIN_ROLE %>
          <%= render 'layouts/admin/sidebar' %>
        <% when AdminUser::MARKETPLACE_ADMIN_ROLE %>
          <%= render 'layouts/admin/marketplace_admin_sidebar' %>
        <% end %>
      <% end %>

      <div class="content-wrapper dash_app">
        <%= yield %>
      </div>
    </div>

    <%= render 'layouts/shared/flash_messages' %>

    <%= yield :page_additional_html %>
    <%= yield :page_js %>
  </body>
</html>
