<%= simple_form_for product, url: product.new_record? ? products_path : product_path(product) do |f| %>
  <div class="box">
    <div class="row">
      <div class="col-md-6 col-xs-12">
        <%= f.input :name %>
        <%= f.input :price, label: 'Price (exclusive of tax)' %>
        <%= f.input :item_code %>
        <%= f.input :image, input_html: { class: 'form-control' } %>
        <%= f.input :serial_number %>
        <%= f.input :tax_id, collection: current_business.taxes.select(:id, :name) %>
        <%= f.input :notes %>
      </div>
      <div class="col-md-6 col-xs-12">
        <%= f.input :supplier_name %>
        <%= f.input :supplier_phone %>
        <%= f.input :supplier_email %>
      </div>
    </div>
  </div>

  <hr>
  <%= f.submit class: 'btn btn-primary' %>
  <a href="<%= product.new_record? ? products_path : product_path(product) %>" class="btn btn-white">Cancel</a>
<% end %>
