<% content_for :title, @product.name %>

<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @product.name %></h1>
    </div>

    <div class="text-right col-xs-6">
      <a class="btn btn-primary" href="<%= edit_product_path(@product) %>">Edit details</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li><a href="<%= products_path %>">Products</a></li>
    <li class="active">Details</li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <% if @product.image.exists? %>
      <p>
        <img src="<%= @product.image.url(:medium) %>" height="100px">
      </p>
    <% end %>
    <div class="block-info">
      <strong>Name:</strong>
      <p><%= @product.name %></p>
    </div>

    <div class="block-info">
      <strong>Item code:</strong>
      <p><%= @product.item_code %></p>
    </div>

    <div class="block-info">
      <strong>Serial number:</strong>
      <p><%= @product.serial_number %></p>
    </div>

    <div class="block-info">
      <strong>Price:</strong>
      <p><%= @product.price %></p>
    </div>

    <div class="block-info">
      <strong>Supplier name:</strong>
      <p><%= @product.supplier_name %></p>
    </div>

    <div class="block-info">
      <strong>Supplier phone:</strong>
      <p><%= @product.supplier_phone %></p>
    </div>

    <div class="block-info">
      <strong>Supplier email:</strong>
      <p><%= @product.supplier_email %></p>
    </div>

    <div class="block-info">
      <strong>Notes:</strong>
      <p><%= @product.notes %></p>
    </div>

    <div class="block-info">
      <strong>Tax:</strong>
      <p>
        <% if @product.tax %>
          <%= @product.tax_name %> (<%= @product.tax_rate %>%)
        <% else %>
          None
        <% end %>
      </p>
    </div>
  </div>
</section>
