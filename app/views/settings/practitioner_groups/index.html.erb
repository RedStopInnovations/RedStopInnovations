<% content_for :title, 'Practitioner groups' %>

<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1>Practitioner groups</h1>
    </div>

    <div class="text-right col-xs-6">
      <a class="btn btn-primary" href="<%= new_settings_practitioner_group_path %>">+ Add group</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li class="active">Practitioner groups</li>
  </ul>
</section>

<section class="content">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Practitioners</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @groups.each do |group| %>
            <tr>
              <td>
                <a href="<%= settings_practitioner_group_path(group) %>"><%= group.name %></a>
              </td>
              <td><%= truncate(group.description, length: 50) %></td>
              <td><%= group.practitioners.count %></td>
              <td>
                <div class="btn-group">
                  <a href="<%= settings_practitioner_group_path(group) %>" class="btn btn-white">Details</a>
                  <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                      <a href="<%= edit_settings_practitioner_group_path(group) %>">Edit</a>
                    </li>
                    <li>
                      <a href="<%= settings_practitioner_group_path(group) %>" data-method="DELETE"
                        data-confirm="Are you sure?">Delete</a>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="row mt-15">
        <div class="col-md-6 text-left">
          <%= page_entries_info @groups %>
        </div>
        <div class="col-md-6 text-right">
          <%= paginate @groups, theme: 'app' %>
        </div>
      </div>
    </div>
  </div>
</section>
