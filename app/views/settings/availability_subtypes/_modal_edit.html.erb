
<div class="modal fade" id="js-modal-edit-subtype">
  <div class="modal-dialog modal-md">
    <div class="modal-content">

      <div class="modal-header bg-gray-light">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit subtype</h4>
      </div>

      <%= simple_nested_form_for @availability_type, url: settings_availability_subtype_path(@availability_type), method: 'PUT', html: {class: 'js-form-edit-subtype'} do |f| %>
        <div class="modal-body">
          <%= f.input :name, required: true, hint: 'Letters and numbers only. Maximum 50 characters.' %>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Update</button>
          <button class="btn btn-white" type="button" data-dismiss="modal">Cancel</button>
        </div>
        <% end %>
    </div>
  </div>
</div>