<div class="modal fade" id="js-modal-new-subtype">
  <div class="modal-dialog modal-md">
    <div class="modal-content">

      <div class="modal-header bg-gray-light">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add subtype</h4>
      </div>

      <%= simple_nested_form_for AvailabilitySubtype.new, url: settings_availability_subtypes_path, html: {class: 'js-form-new-subtype'} do |f| %>
        <div class="modal-body">
          <%= f.input :name, required: true, hint: 'Letters and numbers only. Maximum 50 characters.' %>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Create</button>
          <button class="btn btn-white" type="button" data-dismiss="modal">Cancel</button>
        </div>
        <% end %>
    </div>
  </div>
</div>