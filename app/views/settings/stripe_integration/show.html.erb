<section class="box-header">
  <h1>Stripe integration</h1>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li class="active">Stripe Integration</li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <div class="box-body">

          <% if @stripe_account.present? %>
            <div class="row">
              <div class="col-lg-6">
                <table class="table table-bordered">
                  <tbody>
                    <tr>
                      <td>Account ID:</td>
                      <td><%= @stripe_account.account_id %></td>
                    </tr>
                    <tr>
                      <td>Connected:</td>
                      <td><%= @stripe_account.connected_at.strftime('%d %b %Y, %l:%M%P') %></td>
                    </tr>
                    <tr>
                      <td>Status:</td>
                      <td>
                        <span class="text-green">Active</span>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <button type="button" class="btn btn-danger btn-form"
              data-form-url="<%= settings_stripe_integration_deauthorize_path %>"
              data-form-method="PUT"
              data-form-confirmation="Are you sure you want to disconnect to the current Stripe account?"
              >Disconnect to this account</button>
          <% else %>
            <p class="text-muted">The Stripe integration is not setup yet.</p>
            <a class="btn sitebtn" href="<%= settings_stripe_integration_authorize_path %>">
              Connect to Stripe Account
            </a>
          <% end %>

    </div>
  </div>
</section>
