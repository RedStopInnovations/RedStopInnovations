<% content_for :title, 'Invoice settings' %>

<section class="box-header">
  <h1>Invoice settings</h1>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li class="active">Invoice settings</li>
  </ul>
</section>

<section class="content">
  <div class="panel panel-default">
      <div class="panel-body">
        <%= simple_form_for @form, as: :invoice_settings, url: settings_invoice_path, method: 'PUT' do |f| %>

          <div class="row">
            <div class="col-md-6">
              <%= f.input :starting_invoice_number %>
              <%= f.input :messages, as: :text, label: 'Custom invoice message', input_html: { rows: 10 } %>
            </div>
          </div>

          <hr>
            <%= f.submit 'Save settings', class: 'btn btn-primary' %>
            <a href="<%= settings_path %>" class="btn btn-white">Cancel</a>
        <% end %>
      </div>
  </div>
</section>