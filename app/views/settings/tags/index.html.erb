<% content_for :title, 'Tags' %>

<section class="box-header">
  <div class="row">
    <div class="col-md-6 col-xs-6">
      <h1>Tags</h1>
    </div>
    <div class="text-right col-xs-6">
      <a class="btn btn-primary" href="<%= new_settings_tag_path %>">+ Add tag</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li class="active">
      Tags
    </li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <table class="table table-striped">
      <thead>
        <tr>
          <th style="width: 300px">Name</th>
          <th>Color</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.name %></td>
            <td>
              <div style="display: flex; align-items: center;">
                <div style="width: 50px; height: 20px; background-color: <%= tag.color %>; border: 1px solid #ccc; margin-right: 10px; border-radius: 3px;"></div>
              </div>
            </td>
            <td>
              <a href="<%= edit_settings_tag_path(tag) %>" class="btn btn-link"><i class="fa fa-pencil"></i></a>
              <a href="<%= settings_tag_path(tag) %>"
                 data-method="DELETE"
                 data-confirm="Are you sure?"
                 class="btn btn-link text-danger"><i class="fa fa-trash"></i></a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>