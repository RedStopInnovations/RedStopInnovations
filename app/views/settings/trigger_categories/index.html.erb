<% content_for :title, 'Trigger categories' %>
<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1>Trigger categories</h1>
    </div>

    <div class="text-right col-xs-6">
      <a class="btn sitebtn" href="<%= new_settings_trigger_category_path %>">+ Add category</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li class="active">Trigger categories</li>
  </ul>
</section>

<section class="content">
  <div class="box-table">
    <table class="table-flat">
      <thead>
        <tr>
          <th>Name</th>
          <th>Words</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @trigger_categories.each do |cat| %>
          <tr>
            <td>
              <a href="<%= settings_trigger_category_path(cat) %>"><%= cat.name %></a>
            </td>
            <td><%= cat.words.map(&:text).join(', ') %></td>
            <td>
              <div class="btn-group">
                <button type="button" class="btn btn-success btn-sm btn-flat dropdown-toggle" data-toggle="dropdown">
                  Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right">
                  <li>
                    <a href="<%= settings_trigger_category_path(cat) %>">Show</a>
                  </li>
                  <li>
                    <a href="<%= edit_settings_trigger_category_path(cat) %>">Edit</a>
                  </li>
                  <li>
                    <a href="<%= edit_settings_trigger_category_path(cat) %>">Report</a>
                  </li>
                  <li>
                    <a href="<%= settings_trigger_category_path(cat) %>" data-method="DELETE"
                      data-confirm="Are you sure?">
                       Delete
                    </a>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row mt-15">
      <div class="col-md-6 text-left">
        <%= page_entries_info @trigger_categories %>
      </div>
      <div class="col-md-6 text-right">
        <%= paginate @trigger_categories %>
      </div>
    </div>
  </div>
</section>
