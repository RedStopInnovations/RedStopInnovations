<% content_for :title, 'Treatment note shortcuts' %>

<section class="box-header">
  <div class="row">
    <div class="col-md-6 col-xs-6">
      <h1>Treatment note shortcuts</h1>
    </div>
    <div class="text-right col-xs-6">
      <a class="btn btn-primary" href="<%= new_settings_treatment_shortcut_path %>">+ Add shortcut</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li class="active">
      Treatment note shortcuts
    </li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Content</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @shortcuts.each do |shortcut| %>
          <tr>
            <td><%= shortcut.id %></td>
            <td><%= shortcut.content %></td>
            <td>
              <a href="<%= edit_settings_treatment_shortcut_path(shortcut) %>" class="btn btn-link">
                <i class="fa fa-pencil" aria-hidden="true"></i>
              </a>
              <a href="<%= settings_treatment_shortcut_path(shortcut) %>" class="btn btn-link"
                data-confirm="Are you sure?" data-method="DELETE">
                <i class="fa fa-trash" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row">
      <div class="col-md-6 text-left">
        <%= page_entries_info @shortcuts, entry_name: 'items' %>
      </div>
      <div class="col-md-6 text-right">
        <%= paginate @shortcuts, theme: 'app' %>
      </div>
    </div>
  </div>
</section>
