        icon: '<i class="fa fa-eraser"></i>',
        title: 'Clear Formatting',
        action: () => {
            editor.chain().focus()
                .unsetBold()
                .unsetItalic()
                .unsetUnderline()
                .unsetStrike()
                .unsetCode()
                .unsetHighlight()
                .unsetMark('textStyle')
                .run();
