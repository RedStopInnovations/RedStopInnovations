<section class="new_template_container" id="form-template-wrap">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= form_with model: treatment_template, local: true, id: "form-template" do |form| %>
        <%= form.hidden_field :_method, value: treatment_template.new_record? ? 'post' : 'patch' if !treatment_template.new_record? %>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= form.text_field :name, placeholder: 'Template name', class: "form-control", value: treatment_template.name %>
            </div>
          </div>
        </div>

        <div class="tiptap-editor-container">
          <div class="tiptap-toolbar" id="js-treatment-note-toolbar"></div>
          <div id="js-treatment-note-template-editor" class="tiptap-editor"></div>
          <%= form.hidden_field :content, id: "js-treatment-template-content" %>
          <%= form.hidden_field :html_content, id: "js-treatment-template-html-content" %>
        </div>

        <div class="mt-15">
          <button type="submit" class="btn btn-primary">Save template</button>
          <a href="<%= treatment_templates_path %>" class="btn btn-white">Back to list</a>
        </div>
      <% end %>
</section>

