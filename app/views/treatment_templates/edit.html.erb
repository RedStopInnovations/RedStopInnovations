<% content_for :title, 'Edit treatment note template' %>

<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1>Edit treatment note template</h1>
    </div>

    <div class="text-right col-xs-6">
        <a class="btn btn-primary" href="<%= new_treatment_template_path %>">+ Add template</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li>
      <a href="<%= treatment_templates_path %>">Treatment note templates</a>
    </li>
    <li>
      <a href="<%= treatment_template_path(@treatment_template) %>"><%= @treatment_template.name %></a>
    </li>
    <li class="active">Edit</li>
  </ul>
</section>

<section class="content">
  <%= render 'form', treatment_template: @treatment_template %>
</section>
