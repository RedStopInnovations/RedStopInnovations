<% content_for :title, 'Two-Factor Authentication' %>
<% content_for :body_class, 'login-page' %>

<div class="login-box">
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <h2 class="mt-0">Tracksy</h2>
    </div>
    <div class="col-sm-6 text-right hidden-xs">
      <span style="font-size: 21px">Two-Factor Authentication</span>
    </div>
  </div>

  <hr>

  <h3 class="visible-xs">
    Two-Factor Authentication
  </h3>

  <div class="login-box-body ">

    <%= form_tag app_mfa_authentication_verify_code_path, method: :POST do %>
      <div class="form-group">
        <label for="input-code">Enter the code:</label>
        <input type="text" id="input-code" name="code" class="form-control" required>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary btn-block btn-flat mar-top-15">Verify</button>
      </div>
    <% end %>

    <hr>

    <div class="text-right">
      <a href="<%= destroy_user_session_path %>">Logout</a>
    </div>

  </div>
</div>
