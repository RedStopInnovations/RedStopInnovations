<div class="panel panel-default">
  <div class="panel-heading"><strong>Hospital in home details</strong></div>
  <div class="panel-body">
    <%= f.simple_fields_for :patient, @referral_form.patient do |ff| %>
    <div class="row">
      <div class="col-md-6 col-xs-12">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hih_hospital, label: 'Hospital name' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hih_procedure, label: 'Surgical procedure' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hih_surgery_date, required: true, as: :string, label: 'Surgery date' %>
          </div>

          <div class="col-xs-12 col-md-6">
            <%= ff.input :hih_discharge_date, required: true, as: :string, label: 'Anticipated discharge date' %>
          </div>

          <div class="col-xs-12 col-md-6">
            <%= ff.input :hih_doctor_name, label: 'Doctor name' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hih_doctor_phone, label: 'Doctor phone' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hih_doctor_email, label: 'Doctor email' %>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-xs-12">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hi_company_name, label: 'Health Insurer Name' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hi_number, label: 'Member Number' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hi_manager_name, label: 'Invoice to name' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hi_manager_email, label: 'Invoice to email' %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= ff.input :hi_manager_phone, label: 'Contact phone' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
