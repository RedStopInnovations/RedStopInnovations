<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header bg-warning">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Reject referral confirmation</h4>
      </div>

      <%= form_tag reject_app_referral_path(@referral), method: 'PUT' do %>

        <div class="modal-body">
          <div class="form-group">
            <label>Reason (optional):</label>

            <div class="">
              <% get_referral_reject_reason_options_for_business(current_business).each do |reason| %>
              <div>
                <label class="fw-400">
                  <input type="radio" class="js-cb-reject-reason-option" name="cb-reject-reason-option" value="<%= reason %>">
                  <%= reason %>
                </label>
              </div>
              <% end %>

              <label class="fw-400">
                <input type="radio" class="js-cb-reject-reason-option" name="cb-reject-reason-option" value="__OTHER__">
                Other
              </label>
            </div>

            <input type="text" name="reject_reason" placeholder="Enter the reason" class="mt-10 form-control hide js-input-reject-reason-text">

          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-warning">Reject</button>
          <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
        </div>

      <% end %>
    </div>
  </div>
</div>