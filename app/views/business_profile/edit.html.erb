<% content_for :title, 'Business profile' %>

<section class="box-header">
  <h1>Business profile</h1>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li class="active">Business profile</li>
  </ul>
</section>

<section class="content">
  <%= simple_form_for @business, url: business_profile_path do |f| %>

    <div class="box">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <label class="control-label">Logo</label> <br>
                <%= f.input :avatar, as: :file, label: false, wrapper: false, input_html: { class: 'form-control' } %>
              </div>
              <div class="col-xs-4">
                <% if @business.avatar.url %>
                  <img src="<%= @business.avatar.url %>" style="max-height: 65px;">
                <% end %>
              </div>
            </div>
          </div>

          <%= f.input :name, label: 'Business name' %>

          <%= f.input :abn, label: 'Registration number (ABN)' %>

          <%= f.input :phone %>

          <%= f.input :email, label: 'Email (primary)' %>

          <%= f.input :accounting_email %>
          <div class="small">
            This email will be set as "Reply-To" address for outgoing invoice and account statement emails. <br>
            Leave blank to use the primary email.
          </div>

        </div>

        <div class="col-md-6">
          <%= f.input :website %>

          <%= f.input :fax %>

          <%= f.input :policy_url, label: 'Privacy policy URL' %>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :address1, label: 'Address' %>
        </div>
        <div class="col-md-6">
          <%= f.input :city %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :state %>
        </div>
        <div class="col-md-6">
          <%= f.input :postcode %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :country, priority: [ "Australia" ] %>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :bank_account_name , label: 'Bank account name' %>
        </div>
        <div class="col-md-6">
          <%= f.input :bank_branch_number, label: 'Bank account BSB' %>
        </div>
        <div class="col-md-6">
          <%= f.input :bank_account_number, label: 'Bank account number' %>
        </div>
      </div>
      <hr>
      <button class="btn btn-primary" type="submit">Update profile</button>
      <a href="<%= edit_business_profile_path %>" class="btn btn-white">Reset</a>
    </div>
  <% end %>
</section>
