<section class="box-header">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @outcome_measure_type.name %>'s details</h1>
    </div>

    <div class="text-right col-xs-6">
      <a class="btn sitebtn" href="<%= edit_outcome_measure_type_path(@outcome_measure_type) %>">Edit details</a>
    </div>
  </div>
</section>

<section class="breadcrumb">
  <ul>
    <li>
      <a href="<%= settings_path %>"><i class="fa fa-cog"></i> Settings</a>
    </li>
    <li><a href="<%= outcome_measure_types_path %>">Outcome measure types</a></li>
    <li class="active">Show</li>
  </ul>
</section>

<section class="content">
  <div class="box">
    <div class="block-info">
      <strong>Name:</strong>
      <p><%= @outcome_measure_type.name %></p>
    </div>
    <div class="block-info">
      <strong>Description:</strong>
      <p><%= @outcome_measure_type.description %></p>
    </div>
    <div class="block-info">
      <strong>Type:</strong>
      <p><%= @outcome_measure_type.outcome_type %></p>
    </div>
    <div class="block-info">
      <strong>Unit:</strong>
      <p><%= @outcome_measure_type.unit %></p>
    </div>
    <div class="block-info">
      <strong>Creation:</strong>
      <p><%= @outcome_measure_type.created_at.strftime('%d %b %Y at %l:%M%P') %></p>
    </div>
    <div class="box-footer">
      <a href="<%= outcome_measure_types_path %>">Back to list</a>
    </div>
  </div>
</section>
